<h1>Sign-Up</h1>
<%= form_for( @user ) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit "Sign-Up" %>
<% end %>

<p>Already have an account? <a href="/login">Log-in here</a>!</p>
